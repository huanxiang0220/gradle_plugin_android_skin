<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 绘制底色bgColor-->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/c_F53232_95" />
            <size android:width="@dimen/c10"
                android:height="@dimen/c10"/>
        </shape>
    </item>

    <!-- 绘制白底色距离独步0.5dp的控件画线 -->
    <item
        android:bottom="2.5dp"
        android:left="2.5dp"
        android:right="2.5dp"
        android:top="2.5dp">
        <shape android:shape="oval">
            <solid android:color="@color/cursor" />
            <size android:width="@dimen/c5"
                android:height="@dimen/c5"/>
        </shape>
    </item>

</layer-list>