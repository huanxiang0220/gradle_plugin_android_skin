<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 主体背景 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/B1" />  <!-- 布局背景色 -->
        </shape>
    </item>

    <!-- 底部下划线 -->
    <item
        android:gravity="bottom"
        android:left="15dp"
        android:right="15dp">
        <shape android:shape="rectangle">
            <size android:height="@dimen/c_d" />
            <solid android:color="@color/listDividerColor" />  <!-- 下划线颜色 -->
        </shape>
    </item>

</layer-list>