<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--定义seekbar滑动条的底色-->
    <item android:id="@android:id/background"
        android:gravity="center_vertical"
        android:height="@dimen/c2">
        <shape>
            <size android:height="@dimen/c2" />
            <corners android:radius="1dp" />
            <gradient
                android:angle="270"
                android:centerColor="#2C3443"
                android:centerY="0.75"
                android:endColor="#2C3443"
                android:startColor="#2C3443" />
        </shape>
    </item>
    <!--定义seekbar滑动条进度颜色-->
    <item android:id="@android:id/progress"
        android:gravity="center_vertical"
        android:height="@dimen/c2">
        <clip>
            <shape>
                <size android:height="@dimen/c2" />
                <corners android:radius="1dp"/>
                <solid android:color="#CA4040"/>
            </shape>
        </clip>
    </item>
</layer-list>