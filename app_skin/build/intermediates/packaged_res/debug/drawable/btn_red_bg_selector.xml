<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dip_10dp" />

            <gradient android:angle="90" android:startColor="#bb1818" android:endColor="#c23535" android:gradientRadius="@dimen/dip_30dp" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dip_10dp" />

            <gradient android:angle="90" android:startColor="#bb1818" android:endColor="#c23535" android:gradientRadius="@dimen/dip_30dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/dip_10dp" />

            <gradient android:angle="90" android:startColor="#cc2929" android:endColor="#d34646" android:gradientRadius="@dimen/dip_30dp" />
        </shape>
    </item>
</selector>