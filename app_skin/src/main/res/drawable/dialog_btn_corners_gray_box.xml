<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/dip_8dp" />

            <solid android:color="@color/gray_press" />

            <stroke android:width="@dimen/underline_height" android:color="@color/colorGray" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/dip_8dp" />

            <solid android:color="@color/colorGray_light" />

            <stroke android:width="@dimen/underline_height" android:color="@color/colorGray" />

        </shape>
    </item>
</selector>