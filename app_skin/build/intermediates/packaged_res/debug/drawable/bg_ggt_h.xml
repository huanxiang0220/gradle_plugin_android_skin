<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">

            <solid android:color="@color/toolbar_color" />

            <corners android:bottomLeftRadius="@dimen/dip_15dp" android:topLeftRadius="@dimen/dip_15dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite" />

            <corners android:bottomLeftRadius="@dimen/dip_15dp" android:topLeftRadius="@dimen/dip_15dp" />

            <stroke android:width="@dimen/underline_height" android:color="@color/underline_color" />
        </shape>
    </item>

</selector>