<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <solid android:color="@color/colorf6f6f6" />

            <stroke
                android:width="@dimen/underline_height"
                android:color="@color/underline_color"
                android:dashWidth="@dimen/underline_height" />

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <solid android:color="@color/colorWhite" />

            <stroke
                android:width="@dimen/underline_height"
                android:color="@color/underline_color"
                android:dashWidth="@dimen/underline_height" />
        </shape>
    </item>

</selector>