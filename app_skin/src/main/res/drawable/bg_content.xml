<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 绘制底色bgColor-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bgColor" />
        </shape>
    </item>

    <!-- 绘制白底色距离独步0.5dp的控件画线 -->
    <item
        android:bottom="@dimen/dip_5dp"
        android:left="@dimen/dip_5dp"
        android:right="@dimen/dip_5dp"
        android:top="@dimen/dip_5dp">

        <shape android:shape="rectangle">

            <corners android:radius="@dimen/dip_5dp" />

            <solid android:color="@color/colorWhite" />

            <padding
                android:bottom="@dimen/dip_11dp"
                android:left="@dimen/dip_13dp"
                android:right="@dimen/dip_13dp"
                android:top="@dimen/dip_11dp" />
        </shape>
    </item>

</layer-list>