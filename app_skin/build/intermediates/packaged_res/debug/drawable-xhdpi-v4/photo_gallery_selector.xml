<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape android:shape="rectangle">

            <gradient android:angle="90" android:endColor="@color/D2" android:startColor="@color/D2" />

            <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/B1" android:startColor="@color/B1" />

            <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />

        </shape>
    </item>

</selector>