<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 定义轨道的背景
    <item android:id="@android:id/background" android:drawable="@drawable/bg_progressbar_nor"/>
    &lt;!&ndash; 定义轨道的成功图像 &ndash;&gt;
    <item android:id="@android:id/progress" android:drawable="@drawable/bg_progressbar_pro"/>-->

    <!-- 设置背景色（白色） -->


    <item android:id="@android:id/background">

        <shape>
            <corners android:radius="@dimen/c6" />
            <solid android:color="@color/c_FB6B00"></solid>

        </shape>

    </item>

    <!-- 设置进度条颜色（蓝色） -->


    <item android:id="@android:id/progress">

        <clip>
            <shape >

                <size android:width="@dimen/c30"/>
                <gradient
                    android:endColor="@color/c_FDA400"
                    android:startColor="@color/c_FDA400_0"></gradient>

            </shape>

        </clip>

    </item>

</layer-list>